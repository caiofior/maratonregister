<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="0.1" method="upgrade">

	<name>Maraton Register</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>2013-03-01</creationDate>
	<author>Claudio Fior</author>
	<authorEmail>caiofior@gmail.com</authorEmail>
	<authorUrl>http://digilander.libero.it/caiofior/</authorUrl>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<!--  The version string is recorded in the components table -->
	<version>0.1</version>
	<!-- The description is optional and defaults to the name -->
	<description>Registration to Pordenone Maratonina ...</description>
        <install> <!-- Runs on install -->
                <sql>
                        <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
                </sql>
        </install>
        <uninstall> <!-- Runs on uninstall -->
                <sql>
                        <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
                </sql>
        </uninstall>
	<update> <!-- Runs on update; New in 1.6 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>maratonregister.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu link="option=com_maratonregister">Maraton Register</menu>
                <submenu>
                    <menu link="com_maratonregister&amp;=fidal" >Iscritti FIDAL</menu>
                    <menu link="com_maratonregister&amp;=statistics" >Statistiche</menu>
                </submenu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>maratonregister.php</filename>
                        <filename>controller.php</filename>
                        <folder>sql</folder>
                        <folder>tables</folder>
                        <folder>models</folder>
                        <!-- views files section -->
                        <folder>views</folder>
                        <!-- controllers files section -->
                        <folder>controllers</folder>
		</files>
	</administration>

</extension>

